# Road Tax Me API - Environment Variables
# This is an example file. Copy to .env and fill in actual values.

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=taxme_user
DB_PASSWORD=secure_password_change_me
DB_NAME=roadtaxme_db

# PgAdmin Configuration
PGADMIN_EMAIL=admin@xanvia.tech
PGADMIN_PASSWORD=change_me

# JWT Configuration
JWT_SECRET=your_secure_secret_key_here_change_in_production
JWT_EXPIRY=7d

# DVLA API Configuration
DVLA_API_KEY=your_dvla_api_key_here
DVLA_PROD_URL=https://driver-vehicle-licensing.api.gov.uk/vehicle-enquiry
DVLA_TEST_URL=https://uat.driver-vehicle-licensing.api.gov.uk/vehicle-enquiry

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@roadtaxme.com

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# WhatsApp Configuration
WHATSAPP_ENABLED=false
WHATSAPP_API_KEY=

# Logging
LOG_LEVEL=info

# Admin Seed Configuration (for initial setup)
SEED_ADMIN_EMAIL=admin@xanvia.tech
SEED_ADMIN_PASSWORD=Admin@123!ChangeMe
SEED_ADMIN_FIRST_NAME=Super
SEED_ADMIN_LAST_NAME=Admin
